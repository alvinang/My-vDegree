<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: 'col-sm-2 col-sm-offset-2 control-label' %>
    <div class="col-sm-4">
      <%= f.email_field :email, class: 'form-control', :autofocus => true %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, class: 'col-sm-2 col-sm-offset-2 control-label' %>
    <i>(leave blank if you don't want to change it)</i>
    <div class="col-sm-4">
      <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'col-sm-2 col-sm-offset-2 control-label' %>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>

  <% if f.object.encrypted_password.present? %>
  <div class="form-group">
    <%= f.label :current_password, class: 'col-sm-2 col-sm-offset-2 control-label' %>
    <div class="col-sm-4">
      <%= f.password_field :current_password, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4 text-left">
      <%= f.submit "Update", class: 'btn btn-primary btn-lg col-sm-4 btn-block' %>
    </div>
  </div>
<% end %>
